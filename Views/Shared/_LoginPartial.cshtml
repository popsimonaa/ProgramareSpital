@inject Microsoft.AspNetCore.Identity.SignInManager<ProgramareSpital.Models.ApplicationUser> signInManager
@if (signInManager.IsSignedIn(User))
{
<form method="post" id="logoutForm" asp-action="Logoff" asp-controller="ContUtilizator">
    <ul class="nav navbar-nav">
        <li class="text-white nav-link">Buna, @User.Identity.Name! </li>
        <li><a class="text-white nav-link" href="javascript:document.getElementById('logoutForm').submit()">Deconecteaza-te</a></li>
        <li class="nav-item">
            <a class="nav-link" style="color:whitesmoke" asp-controller="Programare" asp-action="Index">Programare</a>
        </li>
    </ul>
</form>
}
else
{
<ul class="nav navbar-nav">
    <li>
        <a class="nav-link text-white" id="registerLink" asp-controller="ContUtilizator" asp-action="Register">Creeaza cont</a>
    </li>
    <li>
        <a class="nav-link text-white" id="loginLink" asp-controller="ContUtilizator" asp-action="Login">Intra in cont</a>
    </li>
    @*<li class="nav-item">
        <a class="nav-link" style="color:whitesmoke" asp-controller="Home" asp-action="Specializari">Sectii</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" style="color:whitesmoke" asp-controller="Home" asp-action="Index">Despre noi</a>
    </li>*@
</ul>

}