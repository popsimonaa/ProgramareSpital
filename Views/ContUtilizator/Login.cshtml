@model ProgramareSpital.Models.ViewModels.LoginViewModel
<h2>Introdu datele contului tau, pentru a te conecta!</h2>
<div class="row">
    <div class="col-md-8">
        <section id="loginForm">
            <form id="account" method="post" asp-action="Login" asp-controller="ContUtilizator">
                <h4 style="text-align:justify">Folosește email-ul cu care ți-ai creat cont și parola</h4>
                <hr />
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group row">
                    <label class="col-md-2" asp-for="Email">Email</label>
                    <div class=" col-md-10">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-md-2" asp-for="Password">Parola</label>
                    <div class=" col-md-10">
                        <input asp-for="Password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group">

                    <div class=" col-md-10 offset-md-2 checkbox">
                        <label asp-for="RememberMe" class="pr-4 pl-0">
                            <input asp-for="RememberMe" />
                        </label>
                        Remember me?
                    </div>
                </div>
                <div class="form-group">
                    <div class="col-md-10 offset-md-2">
                        <input type="submit" value="Log in" class="btn btn-success" />
                    </div>
                </div>
                <p class="col-md-10 offset-md-2">
                    <a asp-action="Register">Creaza cont nou</a>
                </p>

            </form>
        </section>
    </div>
</div>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />

}